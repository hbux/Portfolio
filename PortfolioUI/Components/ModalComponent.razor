@layout LayoutComponent

<div class="modal">
    <div class="modal-card">
        <div class="modal-header">
            <h3>Contact</h3>
            <div class="project-links">
                <a target="_blank" href="https://www.linkedin.com/in/harry-buxton/" class="icon-link-btn linkedin">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                    </svg>
                </a>
                <a class="icon-link-btn" onclick="toggleContactModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"/>
                        <path fill-rule="evenodd" d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"/>
                    </svg>
                </a>
            </div>
                
        </div>
        <form class="modal-form" target="_blank" action="https://formspree.io/f/mgedlaqn" method="POST">
            <div class="form-field-top">
                <div class="form-field">
                    <label for="name">Name</label>
                    <input name="name" id="name" />
                    <!-- <span class="validation-message">Invalid message</span> -->
                </div>
                <div class="form-field">
                    <label for="email">Email</label>
                    <input name="email" id="email" />
                    <!-- <span class="validation-message">Invalid message</span> -->
                </div>
            </div>
            <div class="form-field">
                <label for="message">Message</label>
                <textarea name="message" id="message"></textarea>
                <!-- <span class="validation-message">Invalid message</span> -->
            </div>
            <div class="modal-send">
                <button class="main-cta">Send message</button>
            </div>
        </form>
    </div>
</div>